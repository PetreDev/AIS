{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "module": "nodenext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "target": "ES2015",
    "downlevelIteration": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
